<p> <span style="font-size: 25px; font-weight: 600;"><%= name %>'s</span> Dashboard </p>

<div class="admin-title">
    <h2>Posts</h2>
    <a href="/admin/add-post" class="btn"> <b>&#43</b> Add New</a>
</div>

<ul class="admin-posts">

    <% data.forEach(post => { %>
        <li>
            <a href="/admin/post/<%= post._id %> "> <%= post.title %> </a>
            
            <div class="admin-post-controls">
                <a href="/admin/edit-post/<%= post._id %>" class="btn">Edit</a>
                <form action="/admin/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" class="btn" value="Delete" class="btn">
                </form>
            </div>
        </li>
    <% }) %>

</ul>